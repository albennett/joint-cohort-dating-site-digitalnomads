<div class="row">
  <h2 id="{{uid}}" class="col-sm-12">{{ displayName }}</h2>
</div>
<div class="row">
  <img class="col-md-3" src="{{ image }}" alt="user image">
  <div class="col-md-9">
    <p>{{ bio }}</p>
    <form>  
      <input type="text" class="bio" placeholder="short bio">
      <input type="text" class="destination" placeholder="desired destination">
      <button class="submit">Submit</button>
    </form>
  </div>
</div>